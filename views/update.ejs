<%- include("partials/nav")%>
<link rel="stylesheet" href="/stylesheets/update.css">
<div class="pg1">
    <h3><u>UPDATE PAGE</u> </h3>
    <form action="/update/<%= index%>" method="post">
        <input type="text" name="id" placeholder="ID" value="<%= books.id%>"> <br>
        <input type="text" name="title" placeholder="Title" value="<%= books.title%>"> <br>
        <textarea name="description"  cols="35" rows="7" placeholder="Description"><%= books.description%></textarea> <br>
        <input class="date" type="date" name="date" placeholder="Date" value="<%= books.date%>"> <br>
        <button>Submit</button>

        
    </form>
</div>





